<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= typeof title !== "undefined" ? title : "Blog App" %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">My Blog</a>
      <div>
        <% if (typeof user !== "undefined" && user) { %>
          <a class="btn btn-sm btn-outline-primary" href="/profile">Profile</a>
          <a class="btn btn-sm btn-outline-secondary" href="/logout">Logout</a>
        <% } else { %>
          <a class="btn btn-sm btn-primary" href="/login">Login</a>
          <a class="btn btn-sm btn-outline-primary" href="/signup">Sign Up</a>
        <% } %>
      </div>
    </div>
  </nav>
